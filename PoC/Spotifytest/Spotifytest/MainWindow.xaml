<Window x:Class="Spotifytest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="MainWindow" Height="209.743" Width="292.096">
    <Grid>
        <TextBox x:Name="Artist" HorizontalAlignment="Left" Height="23" Margin="34,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" Text="{Binding Path=sArtist, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
        <tb:TaskbarIcon Visibility="Visible" x:Name="Balloon" ToolTipText="Spotify Automation" IconSource="icons/Red.ico"/>
        <CheckBox x:Name="B_Enabled" Content="Enable Balloon" HorizontalAlignment="Left" Margin="34,69,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
